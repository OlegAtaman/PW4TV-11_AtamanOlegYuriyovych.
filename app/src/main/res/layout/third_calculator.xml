<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/third_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdCalculator">

    <!-- ScrollView to enable scrolling if needed -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Main container for inputs, button, and results -->
        <LinearLayout
            android:id="@+id/edittext_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <!-- "Назад" Button -->
            <Button
                android:id="@+id/back_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:text="Назад"
                android:textSize="20sp" />

            <!-- 11 Input fields -->
            <EditText
                android:id="@+id/uk_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="uk_max"
                android:padding="12dp" />

            <EditText
                android:id="@+id/uv_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="uv_n"
                android:padding="12dp" />

            <EditText
                android:id="@+id/un_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="un_n"
                android:padding="12dp" />

            <EditText
                android:id="@+id/smom_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="smom_t"
                android:padding="12dp" />

            <EditText
                android:id="@+id/rc_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="rc_n"
                android:padding="12dp" />

            <EditText
                android:id="@+id/rc_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="rc_min"
                android:padding="12dp" />

            <EditText
                android:id="@+id/xc_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="xc_n"
                android:padding="12dp" />

            <EditText
                android:id="@+id/xc_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="xc_min"
                android:padding="12dp" />

            <EditText
                android:id="@+id/l_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="l_i"
                android:padding="12dp" />

            <EditText
                android:id="@+id/r_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="r_o"
                android:padding="12dp" />

            <EditText
                android:id="@+id/x_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="x_o"
                android:padding="12dp" />

            <!-- "Обчислити" Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:text="Обчислити"
                android:textSize="20sp" />

            <!-- Виведення -->
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>